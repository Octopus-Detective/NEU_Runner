/* miniprogram/pages/about/about.wxss */
.cu-bar .action.sub-title1 {
	position: relative;
	top: -0.2rem;
}

.cu-bar .action.sub-title1 text {
	position: relative;
	z-index: 1;
}

.cu-bar .action.sub-title1 text[class*="bg-"]:last-child {
	position: absolute;
	display: inline-block;
	bottom: -0.2rem;
	border-radius: 6rpx;
	width: 100%;
	height: 0.6rem;
	left: 0.6rem;
	opacity: 0.3;
	z-index: 0;
}

.cu-bar .action.sub-title1 text[class*="text-"]:last-child {
	position: absolute;
	display: inline-block;
	bottom: -0.7rem;
	left: 10rem;
	opacity: 0.2;
	z-index: 0;
	text-align: right;
	font-weight: 900;
	font-size: 36rpx;
}